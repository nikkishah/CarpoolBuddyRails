<!DOCTYPE html>

<html>
	<head>
		<title>Carpool Buddy</title>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<%= stylesheet_link_tag "navbar" %>
		<%= stylesheet_link_tag "group_view" %>
		<%= stylesheet_link_tag "maps" %>
		<%= stylesheet_link_tag "bootstrap.min.css" %>
		<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Nixie+One" %>
		<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Lobster&subset=latin,cyrillic-ext,latin-ext,cyrillic" %>
		<%= stylesheet_link_tag "http://fonts.googleapis.com/css?family=Signika&subset=latin,latin-ext" %>
		<%= javascript_include_tag "maps.js" %>
		<%= javascript_include_tag "bootstrap.min.js" %>
		<%= javascript_include_tag "jquery-1.9.0.min.js" %>
	</head>


	<body>
	<script src="//maps.google.com/maps/api/js?v=3.13&amp;sensor=false&amp;libraries=geometry" type="text/javascript"></script>
	<script src='//google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js' type='text/javascript'></script>
	<div class="container">
		<div class="row">
			<h3 class="nearby_groups_heading">Groups Near You</h3>
		    
		    <div class="col-md-6">
		    	<!-- <ul class="pagination pagination-sm center_elm" style="margin-top:20px;">
				  <li><a href="#">&laquo;</a></li>
				  <li><a href="#">1</a></li>
				  <li><a href="#">2</a></li>
				  <li><a href="#">3</a></li>
				  <li><a href="#">4</a></li>
				  <li><a href="#">5</a></li>
				  <li><a href="#">&raquo;</a></li>
				</ul> -->

			    <div class="list-group center_elm" style="font-family:Signika; padding-top: 20px;">
					<!-- <a href="group_view.html?name=Esha-Atolia&distance=1.5" class="list-group-item blockquote-box blockquote-primary clicked_on"> -->
					<% Group.find_each do |group| %>
					  <% user = User.find(group.owner_id)%>
					  <a href="group_view.html?name=Esha-Atolia&distance=1.5" class="list-group-item blockquote-box blockquote-primary">
					  	<div class="row">
					  		<div class="col-md-2" style=''>
						  		<i class="fa fa-map-marker fa-5x" style="margin-left: 5px; vertical-align:center; color:#ff7f50;"></i>
						  	</div>
						  	<div class="col-md-10" style="display: inline-block;">
								<h4 class="list-group-item-heading" style="color:black"><%= group.name %></h4>
								<p class="list-group-item-text">1.5 miles away  |  capacity <%= group.capacity%></p>
								<p class="list-group-item-text">Owned by: <%= user.first_name + " " + user.lastName %></p>
								<p class="list-group-item-text">Members: <%= user.first_name + " " + user.lastName %></p>
							</div>
						</div>
					</a>
					<% end %>
				</div>
				
			</div>
		    
		    <div class="col-md-6">
		    	<br>
				<div id="multi_markers" style='width: 570px; height: 400px;'></div>
		    </div>
		</div>

		<div class="row">
			<div class="col-md-2"></div>
			<!-- <div class="col-md-3" style="margin-left:-75px; margin-top:-10px; font-family: 'Signika';">
				<%= link_to "Back to Your Groups", groups_path, :class => "btn btn-primary btn-large center_elm new_group_btn" %>
			</div> -->
			<div class="col-md-1"></div>
			<!-- <div class="col-md-3" style="margin-left:-225px; margin-top:-10px; font-family: 'Signika';">
				<%= link_to "Request Group Invite", groups_path, :class => "btn btn-primary btn-large center_elm existing_group_btn" %>
			</div> -->
			<div class="col-md-3"></div>
		</div>
	</div>
    <script type="text/javascript">
		var handler = Gmaps.build('Google');
		handler.buildMap({ internal: {id: 'multi_markers'}}, function(){
		  var markers = handler.addMarkers([
		    { lat: 45, lng: 4, name: 'Bar', infowindow: "I'm Bar"},
		    { lat: 47, lng: 3.5, name: 'Baz', infowindow: "I'm Baz"},
		    { lat: 49, lng: 4, name: 'Foo', infowindow: "I'm Foo"},
		  ]);
		  handler.bounds.extendWith(markers);
		  handler.fitMapToBounds();
		});
    </script>

	</body>
</html>